<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.maanondev.logindemophone.MainActivity">


    <EditText
        android:id="@+id/edit_phoneNo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="150dp"
        android:ems="10"
        android:inputType="phone"
        android:hint="Enter your No" />

    <EditText
        android:id="@+id/edit_OTP"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_below="@+id/edit_phoneNo"
        android:layout_marginTop="10dp"
        android:ems="10"
        android:visibility="gone"
        android:inputType="number"
        android:hint="Enter OTP" />

    <Button
        android:id="@+id/LogInBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/edit_OTP"
        android:layout_below="@+id/edit_OTP"
        android:layout_marginTop="10dp"
        android:text="LogIn" />

    <Button
        android:id="@+id/NextBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/edit_OTP"
        android:layout_below="@+id/LogInBtn"
        android:layout_marginTop="10dp"
        android:visibility="gone"
        android:text="Next"/>

</RelativeLayout>
